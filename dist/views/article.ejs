                    n.push(obj);
                }
            }
            for (var i = 0; i < users.length; i++) {
                for (var j = 0; j < finish.length; j++) {
                    if (users[i]._id == finish[j].user_id) {
                        if (finish[j].answer) users[i].answer = finish[j].answer
