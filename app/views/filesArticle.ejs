            animation: rightin .3s forwards;
        }

        .rightout {
            -webkit-animation: rightout .3s forwards;
            animation: rightout .3s forwards;
        }

        @-webkit-keyframes shadow {
            0% {
                background-color: rgba(0, 0, 0, 0);
            }
            50% {
                background-color: rgba(0, 0, 0, .2);
            }
            100% {
                background-color: rgba(0, 0, 0, 0);
            }
        }

        @keyframes shadow {
            0% {
                background-color: rgba(0, 0, 0, 0);
            }
            50% {
                background-color: rgba(0, 0, 0, .2);
            }
            100% {
                background-color: rgba(0, 0, 0, 0);
            }
        }

        @keyframes rightin {
