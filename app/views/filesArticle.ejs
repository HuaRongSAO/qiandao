<script src="https://cdn.bootcss.com/axios/0.16.2/axios.min.js"></script>
<script>
    $(function () {
        var list = new List($('#list'));
        setTimeout(function () {
            list.query()
        })
        //无限滚动
        $(window).scroll(function(){
            var scrollTop = $(this).scrollTop();
            var scrollHeight = $(document).height();
            var windowHeight = $(this).height();
            if(scrollHeight-(scrollTop + windowHeight)<200){
                list.next()
            }
        });


        FastClick.attach(document.body);

        var style = (document.body || document.documentElement).style;

        var animationEnd = (function () {
            var animEndEventNames = {
                WebkitAnimation: 'webkitAnimationEnd',
                animation: 'animationend'
            }
            for (var name in animEndEventNames) {
                if (typeof style[ name ] === "string") {
                    return animEndEventNames[ name ]
                }
            }
        })();

        $.fn.clickShadow = function (callback) {
            $(this).addClass('shadow').on(animationEnd, function () {
                $(this).removeClass('shadow');
                callback && callback();
            });
        }

        // 轮播图
        new Swiper('.banner', {
            loop: true,
            autoplay: 8000,
            pagination: '.swiper-pagination',
            touchRatio: 0.5
        });

        // 导航
        topNav();

        // tab 切换
        $('.tab').on('click', 'li', function () {
            $(this).addClass('active').siblings().removeClass('active');
            var child =  $(this).attr('child')||'all'
            list.setChild(child).query()
        });

        // 跳转
        var $article = $('.article-container');

        $('.list').on('click', 'li', function () {

            var _id = $(this).attr('key')
            var _lists = list.lists
            for(var i=0,len=_lists.length;i<len;i++){
                if(_id === _lists[i]['_id']){
                    $article.find('h1').text(_lists[i]['title']);
                    var src = _lists[i]['image'] || '/website/images/wx-1.jpg';
                    $('.img-wrap img').attr('src',src);
                    $('.article').text(_lists[i]['descript']||_lists[i]['title'])
                    $article.find('a').attr('href','/website/preview/viewer.html?file='+_lists[i]['url'])
                }
            }

            var _className = 'line' + parseInt(Math.random() * 10) % 2;
            $('.line').addClass(_className);//切换分界线背景

            $(this).clickShadow(function () {
                $article.removeClass('rightout').addClass('rightin');
                window.history.pushState(null, '', '');
            });

            window.addEventListener('popstate', function () {
                $article.removeClass('rightin').addClass('rightout');
                window.history.back();
                $('.line').removeClass(_className);
            }, false);
        });

        function topNav () {
            var mySwiper = new Swiper('.tab-container', {
                freeMode: true,
                freeModeMomentumRatio: 0.5,
                slidesPerView: 'auto'
            });

            var swiperWidth = mySwiper.container[ 0 ].clientWidth
            var maxTranslate = mySwiper.maxTranslate();
            var maxWidth = -maxTranslate + swiperWidth / 2

            $(".tab-container").on('touchstart', function (e) {
                e.preventDefault();
            })

            mySwiper.on('tap', function (swiper, e) {
                // e.preventDefault();

                var slide = swiper.slides[ swiper.clickedIndex ];
                var slideLeft = slide.offsetLeft;
                var slideWidth = slide.clientWidth;
                var slideCenter = slideLeft + slideWidth / 2;
                // 被点击slide的中心点

                mySwiper.setWrapperTransition(300);

                if (slideCenter < swiperWidth / 2) {

                    mySwiper.setWrapperTranslate(0);

                } else if (slideCenter > maxWidth) {

                    mySwiper.setWrapperTranslate(maxTranslate);

                } else {

                    nowTlanslate = slideCenter - swiperWidth / 2;

                    mySwiper.setWrapperTranslate(-nowTlanslate);

                }

                $(".tab-container  .active").removeClass('active');

                $(".tab-container .swiper-slide").eq(swiper.clickedIndex).addClass('active');
            })
        }

        function List (dom) {
            this.page = 1;
            this.limit = 20;
            this.dom = dom;
            this.child='all';
            this.isEnd = false;
            this.lists = []
        }
        List.prototype.setLists = function (data) {
           for(var i=0,len=data.length;i<len;i++){
               this.lists.push(data[i])
           }
           console.log(this.lists)
           return this
        }
        List.prototype.setChild = function (child) {
            this.child = child
            this.isEnd = false
            return this
        }
        List.prototype.get = function () {
            $('#loadingToast').show()
            var self = this
            return axios.get('/down/find', {
                params: {
                    child: self.child,
                    limit:self.limit,
                    page:self.page
                }
            }).then(function (responese) {
                $('#loadingToast').hide()
                return responese
            })
            .catch(function (error) {
                $('#loadingToast').hide()
                alert('查找失败！')
            });
        }
        List.prototype.query = function () {
            var self = this
            this.lists = []
            this.page = 1
            this.get().then(function (response) {
                self.setLists(response.data.data)
                self.insertList(response.data.data)
            })
        }
        List.prototype.template = function (data) {
            var listItem=''
            data = Array.from(data)
            if (data.length === 0) return '<p style="padding: 10px;text-align: center">没有没有更多数据了</p>'
            for (var i = 0; i < data.length; i++) {
                var url = data[ i ].image||'/website/images/wx-1.jpg'
                var title =  data[ i ].title ||'祝您身体健康'
                var descript = data[ i ].descript ||'点击查看详情'
                var key = data[i]._id
                listItem += '<li key='+key+'><img src="'+ url +'"><div><h4>'+ title+ '</h4><p>' +
                    descript +'</p></div> </li>';
            }
            return listItem
        }
        List.prototype.insertList = function (data) {
            var listItem = this.template(data)
            this.dom.html(listItem)
        }
        List.prototype.append = function (data) {
            var listItem = this.template(data)
            this.setLists(data)
            this.dom.append(listItem)
        }
        List.prototype.next = function () {
            var self = this,
                loading = false;
            if(loading || this.isEnd) return false;

            loading = true;
            this.page++;
            this.get().then(function (response) {
                loading = false;
                self.append(response.data.data)
                if(response.data.data.length<20) {
                    self.isEnd = true
                    return false
                }
            })
            $('#loadingToast').hide()
        }
    })
</script>
</body>

